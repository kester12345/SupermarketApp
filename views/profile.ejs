<% if (user && user.role === 'admin') { %>
    <%- include('partials/navbar_admin', { user }) %>
<% } else { %>
    <%- include('partials/navbar', { user }) %>
<% } %>

<div class="container mt-5" style="max-width: 750px;">

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">

            <!-- TITLE -->
            <h2 class="mb-4 text-center fw-bold">
                <i class="bi bi-person-circle me-2"></i> My Profile
            </h2>

            <!-- USER DETAILS -->
            <div class="mb-4">
                <p class="mb-1"><strong>Username:</strong> <%= user.username %></p>
                <p class="mb-1"><strong>Email:</strong> <%= user.email %></p>
            </div>

            <hr>

            <!-- 2FA SECTION -->
            <h4 class="fw-bold mb-3">
                <i class="bi bi-shield-lock-fill text-primary me-2"></i> Two-Factor Authentication (2FA)
            </h4>

            <% if (user.twofa_enabled) { %>

                <!-- ENABLED STATE -->
                <div class="alert alert-success d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    <span>Two-Factor Authentication is <strong>ENABLED</strong>.</span>
                </div>

                <form action="/disable-2fa" method="POST">
                    <button class="btn btn-danger btn-lg w-100">
                        <i class="bi bi-x-circle-fill me-2"></i> Disable 2FA
                    </button>
                </form>

            <% } else { %>

                <!-- DISABLED STATE -->
                <div class="alert alert-danger d-flex align-items-center">
                    <i class="bi bi-exclamation-octagon-fill me-2"></i>
                    <span>Two-Factor Authentication is <strong>DISABLED</strong>.</span>
                </div>

                <a href="/enable-2fa" class="btn btn-primary btn-lg w-100">
                    <i class="bi bi-shield-plus me-2"></i> Enable 2FA
                </a>

            <% } %>

        </div>
    </div>

</div>

<%- include('partials/footer') %>