<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Profile</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: #eef2f7;
            font-family: "Segoe UI", sans-serif;
        }

        .profile-wrapper {
            max-width: 900px;
            margin: 45px auto;
            animation: fadeIn .5s ease-in-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to   { opacity: 1; transform: translateY(0); }
        }

        .profile-card {
            background: #ffffff;
            padding: 40px 45px;
            border-radius: 22px;
            box-shadow: 0 8px 22px rgba(0,0,0,0.08);
        }

        .section-title {
            font-weight: 700;
            font-size: 20px;
            color: #1f1f1f;
            border-left: 5px solid #0d6efd;
            padding-left: 12px;
            margin-bottom: 18px;
        }

        .divider {
            height: 2px;
            background: #e6e6e6;
            margin: 24px 0 28px 0;
        }

        .alert {
            border-radius: 12px;
        }

        .alert i {
            font-size: 22px;
            margin-right: 10px;
        }

        .btn-custom {
            padding: 11px;
            font-size: 15px;
            border-radius: 10px;
        }

        .profile-tabs .nav-link {
            border-radius: 50px;
            padding: 10px 20px;
            font-weight: 600;
            color: #555;
        }

        .profile-tabs .nav-link.active {
            background: #0d6efd;
            color: #fff;
            box-shadow: 0 4px 12px rgba(13,110,253,0.4);
        }

        .strength-bar {
            height: 8px;
            border-radius: 5px;
            margin-top: 6px;
            transition: .3s ease;
        }

        /* Popup modal */
        .modal-content {
            border-radius: 15px !important;
            padding: 30px;
        }

        #popupIcon {
            font-size: 60px;
        }
    </style>
</head>
<body>

<!-- NAVBAR -->
<% if (user && user.role === 'admin') { %>
    <%- include('partials/navbar_admin', { user }) %>
<% } else { %>
    <%- include('partials/navbar', { user }) %>
<% } %>

<div class="profile-wrapper">
    <div class="profile-card">

        <!-- PAGE TITLE -->
        <h2 class="text-center fw-bold mb-4">
            <i class="bi bi-person-bounding-box me-2"></i> My Profile
        </h2>

        <!-- FLASH MESSAGES -->
        <% if (success && success.length > 0) { %>
            <div class="alert alert-success d-flex align-items-center">
                <i class="bi bi-check-circle-fill me-2"></i>
                <span><%= success %></span>
            </div>
        <% } %>

        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-danger d-flex align-items-center">
                <i class="bi bi-exclamation-circle-fill me-2"></i>
                <span><%= messages %></span>
            </div>
        <% } %>

        <!-- TABS -->
        <ul class="nav nav-pills mb-4 profile-tabs" id="profileTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="account-tab"
                        data-bs-toggle="tab" data-bs-target="#account"
                        type="button" role="tab" aria-controls="account" aria-selected="true">
                    <i class="bi bi-person-lines-fill me-1"></i> Account
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="security-tab"
                        data-bs-toggle="tab" data-bs-target="#security"
                        type="button" role="tab" aria-controls="security" aria-selected="false">
                    <i class="bi bi-shield-lock-fill me-1"></i> Security (2FA)
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="password-tab"
                        data-bs-toggle="tab" data-bs-target="#password"
                        type="button" role="tab" aria-controls="password" aria-selected="false">
                    <i class="bi bi-key-fill me-1"></i> Change Password
                </button>
            </li>
        </ul>

        <div class="tab-content" id="profileTabsContent">

            <!-- ACCOUNT TAB -->
            <div class="tab-pane fade show active" id="account" role="tabpanel" aria-labelledby="account-tab">
                <h4 class="section-title">
                    <i class="bi bi-info-circle"></i> Account Information
                </h4>

                <p><strong>Username:</strong> <%= user.username %></p>
                <p><strong>Current Email:</strong> <%= user.email %></p>

                <div class="divider"></div>

                <h4 class="section-title">
                    <i class="bi bi-envelope-fill"></i> Update Email
                </h4>

                <form action="/update-email" method="POST" class="mb-2">
                    <label class="form-label fw-semibold">New Email Address</label>
                    <input type="email" class="form-control mb-3" name="newEmail"
                           placeholder="Enter new email" required>

                    <button class="btn btn-warning w-100 btn-custom">
                        <i class="bi bi-arrow-repeat me-1"></i> Update Email
                    </button>
                </form>
            </div>

            <!-- SECURITY / 2FA TAB -->
            <div class="tab-pane fade" id="security" role="tabpanel" aria-labelledby="security-tab">
                <h4 class="section-title">
                    <i class="bi bi-shield-lock-fill"></i> Two-Factor Authentication (2FA)
                </h4>

                <% if (user.twofa_enabled) { %>
                    <div class="alert alert-success d-flex align-items-center">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        <span>2FA is <strong>enabled</strong>.</span>
                    </div>

                    <form action="/disable-2fa" method="POST">
                        <button class="btn btn-danger btn-lg w-100 btn-custom">
                            <i class="bi bi-x-circle-fill me-1"></i> Disable 2FA
                        </button>
                    </form>
                <% } else { %>
                    <div class="alert alert-danger d-flex align-items-center">
                        <i class="bi bi-exclamation-octagon-fill me-2"></i>
                        <span>2FA is <strong>disabled</strong>.</span>
                    </div>

                    <a href="/enable-2fa" class="btn btn-primary btn-lg w-100 btn-custom">
                        <i class="bi bi-shield-plus me-1"></i> Enable 2FA
                    </a>
                <% } %>
            </div>

            <!-- CHANGE PASSWORD TAB -->
            <div class="tab-pane fade" id="password" role="tabpanel" aria-labelledby="password-tab">
                <h4 class="section-title">
                    <i class="bi bi-key-fill"></i> Change Password
                </h4>

                <form id="passwordForm" action="/update-password" method="POST">
                    <label class="form-label fw-semibold">Current Password</label>
                    <input type="password" class="form-control mb-3" name="oldPassword" required>

                    <label class="form-label fw-semibold">New Password</label>
                    <input type="password" id="newPassword" class="form-control" name="newPassword" required>

                    <div id="passwordStrengthBar" class="strength-bar bg-secondary"></div>
                    <small id="passwordStrengthText" class="text-muted"></small>

                    <label class="form-label fw-semibold mt-3">Confirm New Password</label>
                    <input type="password" id="confirmPassword" class="form-control mb-4"
                           name="confirmPassword" required>

                    <button type="submit" class="btn btn-success btn-custom w-100">
                        <i class="bi bi-check2-circle me-1"></i> Change Password
                    </button>
                </form>
            </div>

        </div> <!-- /tab-content -->

    </div>
</div>

<%- include('partials/footer') %>

<!-- Popup Modal -->
<div class="modal fade" id="popupModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content text-center">
      <i id="popupIcon" class="bi mb-3"></i>
      <h4 id="popupMessage"></h4>
      <button class="btn btn-primary mt-3" data-bs-dismiss="modal">OK</button>
    </div>
  </div>
</div>

<script>
    const newPassword = document.getElementById("newPassword");
    const confirmPassword = document.getElementById("confirmPassword");
    const bar = document.getElementById("passwordStrengthBar");
    const text = document.getElementById("passwordStrengthText");

    function showPopup(message, icon, color) {
        document.getElementById("popupMessage").innerText = message;
        document.getElementById("popupIcon").className = `bi ${icon}`;
        document.getElementById("popupIcon").style.color = color;

        new bootstrap.Modal(document.getElementById("popupModal")).show();
    }

    if (newPassword) {
        newPassword.addEventListener("input", () => {
            const val = newPassword.value;
            let strength = 0;

            if (val.length >= 8) strength++;
            if (/[A-Z]/.test(val)) strength++;
            if (/[a-z]/.test(val)) strength++;
            if (/[0-9]/.test(val)) strength++;
            if (/[^A-Za-z0-9]/.test(val)) strength++;

            if (!val) {
                bar.className = "strength-bar bg-secondary";
                text.innerText = "";
            } else if (strength <= 2) {
                bar.className = "strength-bar bg-danger";
                text.innerText = "Weak password";
            } else if (strength <= 3) {
                bar.className = "strength-bar bg-warning";
                text.innerText = "Moderate password";
            } else {
                bar.className = "strength-bar bg-success";
                text.innerText = "Strong password";
            }
        });
    }

    const passwordForm = document.getElementById("passwordForm");
    if (passwordForm) {
        passwordForm.addEventListener("submit", function(event) {
            const pass1 = newPassword.value;
            const pass2 = confirmPassword.value;

            if (pass1.length < 6) {
                event.preventDefault();
                showPopup("Password must be at least 6 characters.", "bi-exclamation-octagon-fill", "red");
                return;
            }

            if (pass1 !== pass2) {
                event.preventDefault();
                showPopup("Passwords do not match!", "bi-x-circle-fill", "red");
                return;
            }

            // Show success popup but allow form to submit
            showPopup("Password updated successfully!", "bi-check-circle-fill", "green");
        });
    }
</script>

</body>
</html>