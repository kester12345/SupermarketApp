<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Manage Users | Supermarket App</title>
</head>
<body>
  <% if (user && user.role === 'admin') { %>
    <%- include('partials/navbar_admin', { user }) %>
  <% } else { %>
    <%- include('partials/navbar', { user }) %>
  <% } %>

  <div class="container mt-5">
    <h1>User Management</h1>
    <a href="/addUser" class="btn btn-success mb-3">+ Add New User</a>

    <% if (users && users.length > 0) { %>
      <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Address</th>
            <th>Contact</th>
            <th>Role</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(user) { %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= user.address %></td>
              <td><%= user.contact %></td>
              <td><%= user.role %></td>
              <td>
                <a href="/updateUser/<%= user.id %>" class="btn btn-warning btn-sm">Edit</a>
                <a href="/deleteUser/<%= user.id %>" class="btn btn-danger btn-sm" 
                   onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <div class="alert alert-info">No users found.</div>
    <% } %>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
