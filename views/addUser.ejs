<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Add New User</title>
</head>
<body>
  <% if (user && user.role === 'admin') { %>
    <%- include('partials/navbar_admin', { user }) %>
  <% } else { %>
    <%- include('partials/navbar', { user }) %>
  <% } %>

  <div class="container mt-5" style="max-width: 900px;">
    <h2 class="mb-4">Add New User</h2>

    <% const errs = Array.isArray(messages) ? messages : []; %>
    <% const oks  = Array.isArray(success)  ? success  : []; %>

    <% if (errs.length) { %>
      <div class="alert alert-danger"><%= errs[0] %></div>
    <% } %>
    <% if (oks.length) { %>
      <div class="alert alert-success"><%= oks[0] %></div>
    <% } %>

    <form action="/addUser" method="POST">
      <div class="mb-3">
        <label class="form-label">Username:</label>
        <input type="text" class="form-control" name="username"
               value="<%= (formData && formData.username) || '' %>" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Email:</label>
        <input type="email" class="form-control" name="email"
               value="<%= (formData && formData.email) || '' %>" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Address:</label>
        <input type="text" class="form-control" name="address"
               value="<%= (formData && formData.address) || '' %>" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Contact:</label>
        <input type="text" class="form-control" name="contact"
               value="<%= (formData && formData.contact) || '' %>" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Password:</label>
        <input type="password" class="form-control" name="password" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Role:</label>
        <select name="role" class="form-select" required>
          <option value="user"  <%= (formData && formData.role === 'user')  ? 'selected' : '' %>>User</option>
          <option value="admin" <%= (formData && formData.role === 'admin') ? 'selected' : '' %>>Admin</option>
        </select>
      </div>

      <button type="submit" class="btn btn-primary">Add User</button>
      <a href="/listUser" class="btn btn-secondary">Cancel</a>
    </form>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
