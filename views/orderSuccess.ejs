<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <title>Order Successful</title>

  <style>
    body {
      background: #f5f5f5;
    }

    .receipt-box {
      background: white;
      padding: 30px;
      margin: 40px auto;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
      max-width: 800px;
      border: 1px solid #e3e3e3;
    }

    .receipt-header {
      text-align: center;
      margin-bottom: 20px;
    }

    .receipt-header h2 {
      font-weight: 700;
      margin-bottom: 5px;
    }

    .receipt-table th {
      background: #212529;
      color: white;
    }

    /* Printing rules */
    @media print {
      body * {
        visibility: hidden !important;
      }
      #printArea, #printArea * {
        visibility: visible !important;
      }
      #printArea {
        margin: 0;
        padding: 0;
      }
      .no-print {
        display: none !important;
      }
    }
  </style>
</head>

<body>

  <div class="receipt-box" id="printArea">

    <div class="receipt-header">
      <h2>Order Successful!</h2>
      <p class="text-muted">Thank you for your purchase üéâ</p>
    </div>

    <p><strong>Order ID:</strong> <%= orderId %></p>

    <table class="table table-striped receipt-table mt-4">
      <thead>
        <tr>
          <th>Product</th>
          <th width="120">Qty</th>
          <th width="140">Subtotal</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(i => { %>
          <tr>
            <td><%= i.productName %></td>
            <td><%= i.quantity %></td>
            <td>$<%= (i.price * i.quantity).toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="text-end mt-4">
      <h4>Total: <strong>
        $<%= items.reduce((sum, x) => sum + x.price * x.quantity, 0).toFixed(2) %>
      </strong></h4>
    </div>

    <!-- PRINT + CONTINUE BUTTONS -->
    <div class="d-flex justify-content-between mt-4 no-print">
      <button class="btn btn-outline-secondary" onclick="window.print()">üñ®Ô∏è Print Receipt</button>
      <a href="/shopping" class="btn btn-primary">Continue Shopping</a>
    </div>

  </div>
  <%- include('partials/footer') %>
</body>
</html>