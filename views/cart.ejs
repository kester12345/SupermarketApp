<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Shopping Cart</title>
</head>
<body>
  <% if (user && user.role === 'admin') { %>
    <%- include('partials/navbar_admin', { user }) %>
  <% } else { %>
    <%- include('partials/navbar', { user }) %>
  <% } %>

  <!-- MAIN CONTENT -->
  <div class="container mt-5">
    <h2 class="text-center">Your Shopping Cart</h2>
    <hr>

    <% if (cart && cart.length > 0) { %>
      <form action="/checkout" method="GET">
        <table class="table table-bordered align-middle text-center shadow-sm">
          <thead class="table-dark">
            <tr>
              <th>Select</th>
              <th>Product</th>
              <th>Image</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Subtotal</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% cart.forEach(item => { %>
              <tr>
                <td>
                  <input type="checkbox" name="ids" value="<%= item.id %>">
                </td>
                <td><%= item.productName %></td>
                <td><img src="/images/<%= item.image %>" width="70" alt="<%= item.productName %>"></td>
                <td>$<%= item.price.toFixed(2) %></td>
                <td><%= item.quantity %></td>
                <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
                <td>
                  <a href="/remove-from-cart/<%= item.id %>" class="btn btn-danger btn-sm">Remove</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>

      <div class="text-end mt-4">
        <h4><strong>Total: $<%= total.toFixed(2) %></strong></h4>

        <a href="/clear-cart" class="btn btn-danger mt-2"
          onclick="return confirm('Clear entire cart?')">Clear Cart</a>

        <a href="/shopping" class="btn btn-secondary mt-2">Continue Shopping</a>

        <!-- NEW BUTTON: checkout selected only -->
        <button type="submit" class="btn btn-success mt-2">
          Proceed with Selected Items
        </button>
      </div>
      </form>
    <% } else { %>
      <div class="alert alert-warning text-center mt-5 p-4 shadow-sm">
        <h4>Your cart is empty ðŸ›’</h4>
        <p>Add some items to continue shopping.</p>
        <a href="/shopping" class="btn btn-primary mt-2">Go to Shopping</a>
      </div>
    <% } %>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
