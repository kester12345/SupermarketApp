<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Update User</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background: #eef2f7;
      font-family: "Segoe UI", sans-serif;
    }

    .page-wrapper {
      max-width: 950px;
      margin: 40px auto;
    }

    .card-main {
      background: #ffffff;
      border-radius: 20px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.08);
      padding: 35px 40px;
      animation: fadeIn .4s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to   { opacity: 1; transform: translateY(0); }
    }

    .section-title {
      font-weight: 700;
      font-size: 20px;
      color: #1f1f1f;
      border-left: 5px solid #0d6efd;
      padding-left: 12px;
      margin-bottom: 18px;
    }

    .sub-label {
      font-size: 13px;
      color: #777;
    }

    .divider {
      height: 1px;
      background: #e3e3e3;
      margin: 24px 0 28px 0;
    }

    .btn-rounded {
      border-radius: 999px;
      padding: 10px 20px;
      font-weight: 500;
    }

    .badge-role {
      font-size: 11px;
      text-transform: uppercase;
      letter-spacing: .06em;
      padding: 4px 10px;
      border-radius: 999px;
    }
  </style>
</head>
<body>

  <!-- NAVBAR -->
  <% if (user && user.role === 'admin') { %>
    <%- include('partials/navbar_admin', { user }) %>
  <% } else { %>
    <%- include('partials/navbar', { user }) %>
  <% } %>

  <div class="page-wrapper">

    <div class="card-main">

      <!-- HEADER -->
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <h3 class="fw-bold mb-1">
            <i class="bi bi-person-gear me-2"></i> Update User
          </h3>
          <p class="text-muted mb-0">
            Manage user details and role.
          </p>
        </div>

        <div class="text-end">
          <span class="badge bg-secondary-subtle text-dark badge-role">
            ID: <%= userData.id %>
          </span>
          <br>
          <span class="badge <%= userData.role === 'admin' ? 'bg-danger' : 'bg-primary' %> badge-role mt-1">
            <%= userData.role === 'admin' ? 'ADMIN' : 'USER' %>
          </span>
        </div>
      </div>

      <!-- FLASH MESSAGES -->
      <% const errs = Array.isArray(messages) ? messages : []; %>
      <% const oks  = Array.isArray(success)  ? success  : []; %>

      <% if (errs.length) { %>
        <div class="alert alert-danger d-flex align-items-center">
          <i class="bi bi-exclamation-circle-fill me-2"></i>
          <div><%= errs[0] %></div>
        </div>
      <% } %>

      <% if (oks.length) { %>
        <div class="alert alert-success d-flex align-items-center">
          <i class="bi bi-check-circle-fill me-2"></i>
          <div><%= oks[0] %></div>
        </div>
      <% } %>

      <form action="/updateUser/<%= userData.id %>" method="POST" class="mt-3">

        <div class="row g-4">

          <!-- BASIC INFO (FULL WIDTH NOW) -->
          <div class="col-md-12">
            <h5 class="section-title">
              <i class="bi bi-person-lines-fill me-1"></i> Basic Information
            </h5>

            <div class="mb-3">
              <label class="form-label">Username</label>
              <input class="form-control" name="username" value="<%= userData.username %>" required>
              <div class="sub-label">This is the name used to identify the user in the system.</div>
            </div>

            <div class="mb-3">
              <label class="form-label">Email</label>
              <input type="email" class="form-control" name="email" value="<%= userData.email %>" required>
              <div class="sub-label">Used for login and communication.</div>
            </div>

            <div class="mb-3">
              <label class="form-label">Address</label>
              <input class="form-control" name="address" value="<%= userData.address %>" required>
            </div>

            <div class="mb-3">
              <label class="form-label">Contact</label>
              <input 
                  class="form-control" 
                  name="contact" 
                  value="<%= userData.contact %>" 
                  required
                  pattern="^[0-9]{8}$"
                  title="Contact number must be exactly 8 digits."
              >
            </div>

            <div class="mb-3">
              <label class="form-label">Role</label>

              <% if (userData.role === 'admin') { %>
                  <!-- Admin role cannot be edited -->
                  <input class="form-control" value="admin" disabled>
                  <input type="hidden" name="role" value="admin">
              <% } else { %>
                  <!-- Normal user can be edited -->
                  <select name="role" class="form-select" required>
                    <option value="user"  <%= userData.role === 'user'  ? 'selected' : '' %>>User</option>
                    <option value="admin" <%= userData.role === 'admin' ? 'selected' : '' %>>Admin</option>
                  </select>
              <% } %>
            </div>

            <div class="mb-3">
              <label class="form-label">New Password</label>
              <input type="password" class="form-control" name="password" placeholder="Leave blank to keep existing">
            </div>

          </div>

        </div> <!-- /row -->

        <div class="divider"></div>

        <!-- ACTION BUTTONS -->
        <div class="d-flex justify-content-between">
          <a href="/listUser" class="btn btn-outline-secondary btn-rounded">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to User List
          </a>

          <button type="submit" class="btn btn-success btn-rounded">
            <i class="bi bi-save2-fill me-1"></i> Save Changes
          </button>
        </div>

      </form>
    </div>

  </div>

  <%- include('partials/footer') %>
</body>
</html>