<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      min-height: 100vh;
      margin: 0;
      display: flex;
      flex-direction: column;   /* <-- NEW */
      background: linear-gradient(135deg, #4e73df, #1cc88a);
      font-family: "Inter", sans-serif;
    }

    .center-wrapper {
      flex: 1;                      /* pushes footer down */
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 40px 0;
    }

    .login-card {
      background: white;
      padding: 40px;
      width: 420px;
      border-radius: 15px;
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
      text-align: left;
    }

    .login-title {
      font-size: 32px;
      font-weight: 700;
      text-align: center;
    }

    .input-group-custom {
      background: #eef3ff;
      border-radius: 10px;
      padding: 10px 12px;
      border: 1px solid #dce3f7;
    }

    .login-btn {
      background: #1a73e8;
      color: white;
      width: 100%;
      padding: 12px;
      border-radius: 8px;
      border: none;
      font-size: 16px;
      margin-top: 15px;
    }

    .login-btn:hover {
      background: #1765ce;
    }

    .register-link {
      text-align: center;
      margin-top: 15px;
      display: block;
      color: #1765ce;
      text-decoration: none;
      font-weight: 500;
    }

    .register-link:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>

  <!-- Center the login card only -->
  <div class="center-wrapper">

    <div class="login-card">

      <h2 class="login-title">üîê Login</h2>

      <% if (errors && errors.length > 0) { %>
        <div class="alert alert-danger mt-3">
          <% errors.forEach(e => { %>
            <p><%= e %></p>
          <% }) %>
        </div>
      <% } %>

      <% if (messages && messages.length > 0) { %>
        <div class="alert alert-success mt-3">
          <% messages.forEach(m => { %>
            <p><%= m %></p>
          <% }) %>
        </div>
      <% } %>

      <form action="/login" method="POST" class="mt-4">

        <label class="form-label">Email Address</label>
        <div class="input-group-custom mb-3">
          <input type="email" name="email" class="form-control border-0 bg-transparent" required>
        </div>

        <label class="form-label">Password</label>
        <div class="input-group-custom mb-3">
          <input type="password" name="password" class="form-control border-0 bg-transparent" required>
        </div>

        <button type="submit" class="login-btn">Login</button>

        <a href="/register" class="register-link">Don't have an account? Register</a>
      </form>

    </div>

  </div>

  <!-- Footer is OUTSIDE the flex centering -->
  <%- include('partials/footer') %>

</body>
</html>