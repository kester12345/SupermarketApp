<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>
<body>
  <% if (user && user.role === 'admin') { %>
    <%- include('partials/navbar_admin', { user }) %>
  <% } else { %>
    <%- include('partials/navbar', { user }) %>
  <% } %>

  <div class="container">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <br>
    <div class="text-center"><h2>Products from Supermarket App Database</h2></div>
    <br>

    <table class="table table-hover small text-center align-middle">
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Product Image</th>
          <th>Quantity Available</th>
          <th>Price</th>
          <% if (user.role === 'admin') { %>
            <th>Edit</th>
            <th>Delete</th>
          <% } else { %>
            <th>Buy</th>
          <% } %>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < products.length; i++) { %>
          <tr>
            <td><a href="/product/<%= products[i].id %>"><%= products[i].productName %></a></td>
            <td><img src="/images/<%= products[i].image %>" width="80"></td>
            <td><%= products[i].quantity %></td>
            <td>$<%= products[i].price.toFixed(2) %></td>

            <% if (user.role === 'admin') { %>
              <td><a href="/updateProduct/<%= products[i].id %>" class="btn btn-warning btn-sm">Edit</a></td>
              <td><a href="/deleteProduct/<%= products[i].id %>" onclick="return confirm('Are you sure you want to delete this product?')" class="btn btn-danger btn-sm">Delete</a></td>
            <% } else { %>
              <td>
                <form action="/add-to-cart/<%= products[i].id %>" method="POST" class="d-inline-flex align-items-center justify-content-center">
                  <input type="number" name="quantity" value="1" min="1" max="<%= products[i].quantity %>" class="form-control form-control-sm me-2" style="width:70px;">
                  <button type="submit" class="btn btn-success btn-sm">Buy</button>
                </form>
              </td>
            <% } %>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
