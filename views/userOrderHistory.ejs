<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f5f6fa;
        }

        .history-container {
            background: #ffffff;
            padding: 35px;
            margin-top: 40px;
            border-radius: 18px;
            box-shadow: 0 6px 18px rgba(0,0,0,0.10);
        }

        .history-title {
            font-weight: 800;
            color: #2c3e50;
        }

        .history-table {
            border-radius: 12px;
            overflow: hidden;
        }

        .history-table th {
            background-color: #1f2937 !important;
            color: #ffffff;
            font-size: 15px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .history-table td {
            padding: 14px;
            vertical-align: middle;
        }

        .history-table tbody tr:hover {
            background-color: #eef2ff;
        }

        .badge-status {
            padding: 8px 12px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 600;
        }

        .badge-completed {
            background: #16a34a;
            color: #fff;
        }

        .badge-pending {
            background: #f59e0b;
            color: #fff;
        }

        .badge-cancelled {
            background: #dc2626;
            color: #fff;
        }

        .btn-details {
            border-radius: 8px;
            padding: 6px 14px;
            font-weight: 600;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <%- include('partials/navbar', { user }) %>

    <div class="container history-container">
        <h2 class="history-title">ðŸ“¦ My Order History</h2>

        <!-- Show username -->
        <p class="text-muted fs-5 mb-3">
            Customer: <strong><%= user.username %></strong>
        </p>

        <hr>

        <% if (orders.length === 0) { %>

            <div class="alert alert-warning mt-4 text-center py-4">
                <h4 class="mb-2">You have no past orders yet.</h4>
                <p class="mb-3">Start shopping and your orders will appear here.</p>
                <a href="/shopping" class="btn btn-primary px-4">Start Shopping</a>
            </div>

        <% } else { %>

            <table class="table table-bordered history-table shadow-sm">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Payment</th>
                        <th>Reference</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td><%= order.order_id %></td>

                            <!-- Extract timestamp portion from order_id -->
                            <td><%= order.order_id.substring(4, 17) %></td>

                            <td>
                                <% if (order.status === 'completed') { %>
                                    <span class="badge-status badge-completed">Completed</span>
                                <% } else if (order.status === 'pending') { %>
                                    <span class="badge-status badge-pending">Pending</span>
                                <% } else { %>
                                    <span class="badge-status badge-cancelled"><%= order.status %></span>
                                <% } %>
                            </td>

                            <td><%= order.paymentMode %></td>
                            <td><%= order.referenceId %></td>

                            <td>
                                <a href="/my-orders/<%= order.order_id %>" class="btn btn-sm btn-primary btn-details">
                                    View Details
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

        <% } %>
    </div>

    <%- include("partials/footer") %>

</body>
</html>